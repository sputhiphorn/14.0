<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_report_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="page c-b mt--30px">
                    <div class="table_body" style="margin-top:-60px;">
                        <table class="table table-condensed able table-striped">
                            <tr style="font-weight:bold;font-size:10px;">
                                <td>អាស័យដ្ឋាន ផ្ទះលេខ<br/>Address: No.</td>
                                <td>219 A</td>
                                <td>ផ្លូវលេខ<br/>Street</td>
                                <td>63</td>
                                <td>ឃុំ/សង្កាត់<br/>Commune/Sangkat</td>
                                <td>បឹងកេងកង១<br/>Boeng Keng Kang 1</td>
                            </tr>
                            <tr style="font-weight:bold;font-size:10px;">
                                <td >ក្រុង/ស្រុក/ខ័ណ្ឌ<br/>Town/District/Khan</td>
                                <td>ចំការមន<br/>Chamkarmon</td>
                                <td>ខេត្ត/រាជធានី<br/>Province/City</td>
                                <td>ភ្នំពេញ<br/>Phnom Penh</td>
                                <td>ទូរស័ព្ទលេខ:<br/>Telephone No.</td>
                                <td>+855 11 300 361</td>
                            </tr>
                        </table>
                    </div>
                    <div class="text-center fontKhmerM1">
                        <t t-if="o.partner_id.vat">
                            <h5><strong>វិក្កយបត្រអាករ</strong></h5>
                            <h5><strong>TAX INVOICE</strong></h5>
                        </t>
                        <t t-else="">
                            <h5><strong>វិក្កយបត្រធម្មតា</strong></h5>
                            <h5><strong>COMMERCIAL INVOICE</strong></h5>
                        </t>
                    </div>
                    <div class="pt-1r">
                        <div class="table_body">
                            <h6 class="fw-b"> អតិថិជន / Customer:</h6>
                            <table class="table table-condensed able table-striped">
                                <tr style="font-size:10px;">
                                    <td class="fw-b">ឈ្មោះក្រុមហ៊ុន ប្ញ អតិថិជន<br/>Company Name/Customer</td>
                                    <td colspan="3" class="fw-b"><span t-field="o.partner_id" /></td>
                                    <td class="fw-b">លេខរៀងវិក្កយបត្រ<br/>Invoice No.</td>
                                    <td><span t-field="o.number"/></td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <td class="fw-b">អាស័យដ្ឋាន ផ្ទះលេខ<br/>Address: No.</td>
                                    <td style="width:120px"><span t-field="o.partner_id.street"/></td>
                                    <td class="fw-b">ផ្លូវលេខ<br/>Street</td>
                                    <td style="width:120px"><span t-field="o.partner_id.street"/></td>
                                    <td class="fw-b">ឃុំ/សង្កាត់<br/>Commune/Sangkat</td>
                                    <td><span t-field="o.partner_id.street2"/></td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <td class="fw-b">ក្រុង/ស្រុក/ខ័ណ្ឌ<br/>Town/District/Khan</td>
                                    <td><span t-field="o.partner_id.street2"/></td>
                                    <td class="fw-b">ខេត្ត/រាជធានី<br/>Province/City</td>
                                    <td><span t-field="o.partner_id.city"/></td>
                                    <td class="fw-b">ទូរស័ព្ទលេខ:<br/>Telephone No.</td>
                                    <td><span t-field="o.partner_id.phone"/></td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <t t-if="o.partner_id.vat">
                                        <td class="fw-b">លេខអត្តសញ្ញាណកម្ម​ អតប<br/>(VATTIN)</td>
                                        <td colspan="3" style="font-size:14px;"><span t-esc="o.partner_id.vat[0:4]+'-'+o.partner_id.vat[4:]" /></td>
                                        <td class="fw-b">កាលបរិច្ឆេទ<br/>Date:</td>
                                        <td><span t-field="o.date_invoice" /></td>
                                    </t>
                                    <t t-else="">
                                        <td class="fw-b">កាលបរិច្ឆេទ<br/>Date:</td>
                                        <td><span t-field="o.date_invoice" /></td>
                                    </t>
                                </tr>
                            </table>
                        </div>
                        <!-- - - - - - - - - - Body - - - - - - - - - -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                        <div class="table_body">
                            <table class="table table-condensed able table-striped">
                                <thead style="font-size:9px;">
                                    <th style="border:1px;">ល.រ<br/>No.</th>
                                    <th style="border:1px;">បរិយាយមុខទំនិញ<br/>Description</th>
                                    <th colspan="3">បរិមាណ<br/>Quantity Order</th>
									<th colspan="3">បរិមាណ<br/>Quantity Delivered</th>
									<th>បរិមាណ<br/>Quantity</th>
                                    <th>ថ្លៃឯកតា<br/>Unit Price</th>
                                    <th>ថ្លៃទំនិញ<br/>Amount</th>
                                </thead>
                                <tbody style="font-size:8px;">
                                    <t t-foreach="o.invoice_line_ids" t-as="l">
                                        <tr>
                                            <td class="bordered-left bordered-right text-center"><span t-esc="l_index + 1" /></td>
                                            <td class="bordered-left bordered-right">
                                                <t t-if="l.name.find('[') != -1">
                                                  <span t-esc="l.name.split(']')[1]"/>
                                                </t>
                                                <t t-else="">
                                                  <span t-esc="l.name"/>
                                                </t>
                                            </td>
                                            <td style="width: 40px; text-align: right;">
                                                <t t-if="str(l.quantity - int(l.quantity))[1:].find('.0') != -1">
                                                    <span t-esc="'%.0f'%(l.quantity)"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="'%.1f'%(l.quantity)"/>
                                                </t>
                                            </td>
                                            <td></td><td></td>
                                            <td style="width: 40px; text-align: right;">
                                                <t t-if="str(l.quantity - int(l.quantity))[1:].find('.0') != -1">
                                                    <span t-esc="'%.0f'%(l.quantity)"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="'%.1f'%(l.quantity)"/>
                                                </t>
                                            </td>
                                            <td></td><td></td>
                                            <td class="text-right bordered-left bordered-right">
                                                <t t-if="str(l.quantity - int(l.quantity))[1:].find('.0') != -1">
                                                    <span t-esc="'%.0f'%(l.quantity)"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="'%.1f'%(l.quantity)"/>
                                                </t>
                                            </td>
                                            <td class="text-right bordered-left bordered-right">
                                                <span t-field="l.price_unit"/>
                                            </td>
                                            <td class="text-right bordered-left bordered-right">
                                                <span t-field="l.price_subtotal"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot style="font-size:9px;">
                                    <tr>
                                        <t t-if="o._get_tax_amount_by_group()">
                                            <t t-if="display_discount">
                                                <td colspan="11" class="text-right borderAround">
                                                    សរុប  Sub total
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td colspan="10" class="text-right borderAround">
                                                    សរុប  Sub total
                                                </td>
                                            </t>
                                            <td class="text-right borderAround">
                                                <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <!--Is Discount?-->
                                            <tr>
                                                <t t-if="display_discount">
                                                    <td  colspan="11" class="text-right borderAround">
                                                        សរុបរួម  Grand Total
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td  colspan="10" class="text-right borderAround">
                                                        សរុបរួម  Grand Total
                                                    </td>
                                                </t>
                                                <td class="text-right borderAround">
                                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="10" rowspan="1" class="text-right">
                                                        សរុបរួម រៀល/Grand Total Riel
                                                </td>
                                                <td class="text-right" rowspan="1" >
                                                    <span t-field="o.amount_total_khmer"/> <span t-field="o.currency_symbol_khmer"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr>
                                            <t t-if="display_discount">
                                                <td colspan="11" class="text-right borderAround">អារករលើតម្លៃបន្ថែម(<span t-esc="amount_by_group[0]" />)</td>
                                            </t>
                                            <t t-else="">
                                                <td colspan="10" class="text-right borderAround">អារករលើតម្លៃបន្ថែម(<span t-esc="amount_by_group[0]" />)</td>
                                            </t>
                                            <td class="text-right borderAround">
                                                <span t-esc="amount_by_group[1]" t-options='{"widget":"monetary", "display_currency": o.currency_id}' />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="o._get_tax_amount_by_group()">
                                        <tr>
                                            <!--Is Discount?-->
                                            <t t-if="display_discount">
                                                <td colspan="11" class="text-right borderAround">
                                                    សរុបរួម  Grand Total
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td colspan="10" class="text-right borderAround">
                                                    សរុបរួម  Grand Total
                                                </td>
                                            </t>
                                            <td class="text-right borderAround">
                                                <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="10" rowspan="1" class="text-right">
                                                    សរុបរួម រៀល/Grand Total Riel
                                            </td>
                                            <td class="text-right" rowspan="1" >
                                                <span t-field="o.amount_total_khmer"/> <span t-field="o.currency_symbol_khmer"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- - - - - - - - - - Footer  - - - - - - - - - -->
                    <div>
                        <div class="col-xs-4 text-center">
                            Issue By:
                            <div  class="Signature"></div>
                            <div id="signature">
                                <b>_______________________</b>
                            </div>
                            <br/>
                            <p><![CDATA[ Maison Kayser(Cambodia) Co.,Ltd ]]></p>
                        </div>
                        <div class="col-xs-4 text-center">
                            Delivery By:
                            <div  class="Signature"></div>
                            <div id="signature">
                                <b>_______________________</b>
                            </div>
                            <br/>
                            <p><![CDATA[ Maison Kayser(Cambodia) Co.,Ltd ]]></p>
                        </div>
                        <div class="col-xs-4 text-center">
                            Paid By:
                            <div  class="Signature"></div>
                            <div id="signature">
                                <b>_______________________</b>
                            </div>
                            <br/>
                            <p><![CDATA[ Buyer's signature & Name ]]></p>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
