                                </group>
                                <group string="Booking orders" groups='__export__.res_groups_58_d3b2356d'>
                                    <field name="booking_orders"/>
                                    <field name="booking_orders_required_cashier_signature"
                                           attrs="{'invisible': [('booking_orders', '=', False)]}" groups='__export__.res_groups_58_d3b2356d'/>
                                    <field name="booking_orders_alert"
                                           attrs="{'invisible': [('booking_orders', '=', False)]}" groups='__export__.res_groups_58_d3b2356d'/>
                                    <field name="delivery_orders"
                                           attrs="{'invisible': [('booking_orders', '=', False)]}"/>
                                    <field name="booking_orders_display_shipping_receipt"
                                           attrs="{'invisible': [('booking_orders', '=', False)]}" groups='__export__.res_groups_58_d3b2356d'/>
                                </group>
                            </group>
                            <group>
                                <group string="Order Line display">
                                    <field name="auto_remove_line"/>
                                    <field name="display_image_product"/>
                                    <field name="change_unit_of_measure" groups='__export__.res_groups_58_d3b2356d'/>
                                    <field name="note_orderline"/>
                                    <field name="display_tax_orderline" groups='__export__.res_groups_58_d3b2356d'/>
                                    <field name="display_tax_receipt" groups='__export__.res_groups_58_d3b2356d'/>
                                    <field name="display_image_orderline" groups='__export__.res_groups_58_d3b2356d'/>
                                    <field name="add_tags"/>
                                    <field name="fast_remove_line"/>
                                </group>
                            </group>
                        </page>
                        <page string="Sellers">
                            <group>
                                <field name="add_sale_person"/>
                                <field name="default_seller_id" attrs="{'invisible': [('add_sale_person', '=', False)]}"/>
                                <field name="seller_ids" widget="many2many_tags" attrs="{'invisible': [('add_sale_person', '=', False)], 'required': [('add_sale_person', '=', True)]}"/>
                            </group>
                        </page>
                        <page string="Report">
                            <group>
                                <group>
                                    <field name="report_no_of_report"/>
                                </group>
                                <group>
                                    <field name="report_product_summary"/>
                                    <field name="report_product_current_month_date"/>
                                    <field name="report_product_summary"/>
                                </group>
                                <group>
                                    <field name="report_order_summary"/>
                                    <field name="report_order_current_month_date"/>
                                </group>
                                <group>
                                    <field name="report_payment_summary"/>
                                    <field name="report_payment_current_month_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Tools tip" groups='__export__.res_groups_58_d3b2356d'>
                            <group>
                                <group>
                                    <field name="tooltip"/>
                                    <field name="tooltip_show_last_price"/>
                                    <field name="tooltip_show_minimum_sale_price"/>
                                </group>
                            </group>
                        </page>
                        <page string="Speed Up" groups="__export__.res_groups_58_d3b2356d">
                            <group>
                                <field name="big_datas"/>
                            </group>
                            <group attrs="{'invisible': [('big_datas', '=', False)]}">
                                <button name="reinstall_database"
                                        string="Install/Reinstall Database"
                                        class="btn-danger"
                                        type="object"
                                        icon="fa-archive"
                                        onclick="remove_pos_database()"
                                >
                                    <script>
                                        function remove_pos_database() {
                                            localStorage.clear();
                                            var database_template = this.odoo.session_info.db;
                                            for (var i = 0; i &lt; 100; i++) {
                                                indexedDB.deleteDatabase(database_template + '_' + i);
                                            }
                                        }
                                    </script>
                                </button>

                            </group>
                        </page>
                        <page string="Sale Packaging" groups="__export__.res_groups_58_d3b2356d">
                            <group>
                                <field name="sale_with_package"/>
                            </group>
                        </page>
                        <page string="Accounting/Invoice">
                            <group>
                                <field name="management_invoice"/>
                                <field name="wallet" groups="__export__.res_groups_58_d3b2356d"/>
                                <field name="management_session" groups="__export__.res_groups_58_d3b2356d"/>
                                <field name="invoice_offline" groups="__export__.res_groups_58_d3b2356d"/>
                                <field name="update_tax"/>
                                <field name="update_tax_ids" widget="many2many_tags" options="{'no_create': True}"
                                       domain="[('type_tax_use','=','sale')]"
