                                            <field name="name"/>
                                        </tree>
                                        <form string="Image">
                                            <field name="image" widget='image' class="oe_avatar"/>
                                            <div class="oe_title">
                                                <h1>
                                                    <field name="name"/>
                                                </h1>
                                            </div>
                                            <group>
                                                <field name="description"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </group>
                        </page>
                        <page string="Order and Booking">
                            <group>
                                <field name="customer_default_id"/>
                                <field name="backup" groups='__export__.res_groups_58_d3b2356d'/>
                                <field name="hide_amount_total"/>
