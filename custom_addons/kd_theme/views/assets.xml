<odoo>
    <template id="assets_backend" name="Open Mobile Assets" inherit_id="web.assets_backend">
        <xpath expr=".">
            <link rel="stylesheet"
                  type="text/css"
                  href="/kd_theme/static/lib/css/drawer.3.2.0.css"
                  />
            <link rel="stylesheet"
                  href="/kd_theme/static/src/less/main.less"
                  />
            <link rel="stylesheet"
                  href="/kd_theme/static/src/less/navbar.less"
                  />
            <link rel="stylesheet"
                  href="/kd_theme/static/src/less/app_drawer.less"
                  />
            <link rel="stylesheet"
                  href="/kd_theme/static/src/less/form_view.less"
                  />
            <link rel="stylesheet"
                  href="/kd_theme/static/src/less/variables.less"
                  />      

            <script type="application/javascript"
                    src="/kd_theme/static/lib/js/iscroll-probe.5.2.0.js"
                    />
            <script type="application/javascript"
                    src="/kd_theme/static/lib/js/drawer.3.2.0.js"
                    />
            <script type="application/javascript"
                    src="/kd_theme/static/src/js/web_responsive.js"
                    />
        </xpath>

        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet"
                href="/kd_theme/static/src/less/drawer.less"/>
            <link rel="stylesheet"
                href="/kd_theme/static/src/less/variables_kd.less"/>
            <link rel="stylesheet"
                href="/kd_theme/static/src/less/bootswatch.less"/>
            <link rel="stylesheet"
                href="/kd_theme/static/src/less/style.less"/>
        </xpath>
    </template>
    <template id="qunit_suite" inherit_id="web.qunit_suite">
        <xpath expr="//t[@t-set='head']" position="inside">
            <script type="application/javascript"
                    src="/kd_theme/static/tests/js/web_responsive.js"
                    />
        </xpath>
    </template> 
</odoo>
