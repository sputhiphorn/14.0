<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Adding a salary rule for loan-->
	<data noupdate="0">
		<record id="hr_rule_mobile" model="hr.salary.rule">
            <field name="code">MOBILE</field>
            <field name="name">Mobile</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.MOBILE and inputs.MOBILE.amount</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="sequence" eval="190"/>
        </record>

        <record id="hr_rule_lunch_allownce" model="hr.salary.rule">
            <field name="code">LUNCH</field>
            <field name="name">Lunch Fee</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="amount_select">fix</field>
            <field eval="10.0" name="amount_fix"/>
            <field name="sequence" eval="14"/>
            <field name="note">A conveyance allowance refers to an amount of money reimbursed to someone for the lunch</field>
        </record>

        <record id="hr_rule_input_loan" model="hr.rule.input">
            <field name="code">MOBILE</field>
            <field name="name">MOBILE</field>
            <field name="input_id" ref="hr_rule_mobile"/>
        </record>

	</data>
</odoo>
