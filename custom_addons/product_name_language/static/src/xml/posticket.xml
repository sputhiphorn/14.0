<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-extend="PosTicket">
		<t t-jquery="table[class*='receipt-orderlines']" t-operation="replace">
		
			<table class='receipt-orderlines'>
			<tr>
				<th class="pos-left-align" width='50%' style="border-top: dotted 1px #000">បរិយាយ</th>
				<th class="centern" width='10%' style="border-top: dotted 1px #000">ចំនួន</th>
				<th class="pos-right-align" width="15%" style="border-top: dotted 1px #000">តម្លៃ</th>
				<!--<th class="pos-right-align" width="15%" style="border-top: dotted 1px #000">ចុះថ្លៃ</th>-->
				<th class="pos-right-align" width='20%' style="border-top: dotted 1px #000">សរុប</th>
			</tr>
			<tr>
				<th class="pos-left-align" width='50%' style="border-top: dotted 1px #000">ITEMS</th>
				<th class="center" width='10%' style="border-top: dotted 1px #000">QTY</th>
				<th class="pos-right-align" width="15%" style="border-top: dotted 1px #000">PRICE</th>
				<!--<th class="pos-right-align" width="15%" style="border-top: dotted 1px #000">Disc.</th>-->
				<th class="pos-right-align" width='20%' style="border-top: dotted 1px #000">AMOUNT</th>
			</tr>
			<t t-set="dis" t-value="0" />
			<tr t-foreach="orderlines" t-as="orderline">
				<t t-if="orderline.get_product().id != widget.pos.config.discount_product_id[0]">
					<t t-set="dis" t-value="orderline.get_display_price()" />
				</t>
				<div t-if="orderline.get_product().id != widget.pos.config.discount_product_id[0]">
						<td style="border-bottom: dotted 1px #000;padding-top:3px;">
						<div style="line-height: 1.1em;">
							<t t-esc="orderline.get_product().display_name"/>
							<!-- Add second product name here -->
							<div t-if="orderline.get_product().other_language_name">
								<t t-esc="orderline.get_product().other_language_name"/>
							</div>
							<div t-if="orderline.get_discount() > 0">
								<div class="pos-disc-font">
									With a <t t-esc="orderline.get_discount()"/>% discount
								</div>
							</div>
						</div>
					</td> <!-- Item Column -->
					<td class="center" style="border-bottom: dotted 1px #000">
						<t t-esc="orderline.get_quantity_str_with_unit()"/>
					</td>
					<td class="pos-right-align" style="border-bottom: dotted 1px #000">
						<t t-esc='orderline.price - orderline.get_tax()' />
						<!--<div t-if="!orderline.get_discount() > 0">                                -->
							<!--Price : <t t-esc='orderline.price - orderline.get_tax()' />                                -->
						<!--</div>-->
						<!---->
						<!--<div t-if="orderline.get_discount() > 0">                                -->
							<!--Price : <span style="text-decoration: line-through;"><t t-esc='orderline.price - orderline.get_tax()' /></span> -->
								  <!--<t t-esc='orderline.price - orderline.get_tax() - orderline.get_item_discout()' />		                    	   -->
							<!--<div class="pos-disc-font">-->
								<!--With a <t t-esc="orderline.get_discount()"/>% discount-->
							<!--</div>-->
						<!--</div>	-->
					</td >
					<!--<td class="pos-right-align" style="border-bottom: dotted 1px #000">-->
						<!--<t t-esc="orderline.get_discount()"/>%-->
					<!--</td>-->
					<td class="pos-right-align" style="border-bottom: dotted 1px #000">
						<t t-esc="widget.format_currency_no_symbol(orderline.get_display_price())"/>
					</td>
				</div>
			</tr>
		</table>

		</t>
	</t>
</templates>