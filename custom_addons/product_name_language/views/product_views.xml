<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view -->
        <record model="ir.ui.view" id="product_extend_view_form">
            <field name="name">product_extend_name.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_ok']" position="before"> 
                    <field name="other_language_name" placeholder="Name in other language"/>
                    <separator/>
                </xpath>
            </field>
        </record>  

    </data>
</odoo>