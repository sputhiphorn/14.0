<odoo>
    <data>

        <record model="ir.ui.view" id="pos_config_separate_category">
            <field name="name">pos.config.separate.category</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='company']" position="after">
                    <group>
                        <field name="separate_category"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
